{
	"source": ["data/**/*.json"],
	"platforms": {
		"scss": {
			"options": {
				"showFileHeader": false
			},
			"transformGroup": "scss",
			"prefix": "rh",
			"buildPath": "./build/scss/",
			"files": [
				{
					"destination": "_variables.scss",
					"format": "scss/variables"
				},
				{
					"destination": "fonts.scss",
					"format": "css/fonts.scss"
				}
			],
			"actions": ["copy_assets"]
		}
	}
}
