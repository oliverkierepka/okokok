{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es5",
		"module": "esnext",
		"lib": ["es2018", "dom"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@rhenag/components": ["libs/components/src/index.ts"],
			"@rhenag/designtokens": ["libs/designtokens/src/index.ts"],
			"@rhenag/elements": ["libs/elements/src/index.ts"],
			"@rhenag/shared/cypress-commands": [
				"libs/shared/cypress-commands/src/index.ts"
			],
			"@rhenag/themes/lima": ["libs/themes/lima/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
