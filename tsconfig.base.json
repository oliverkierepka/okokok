{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2022",
		"module": "es2022",
		"lib": ["es2022", "dom"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@okokok/components": ["libs/components/src/index.ts"],
			"@okokok/designtokens": ["libs/designtokens/src/index.ts"],
			"@okokok/elements": ["libs/elements/src/index.ts"],
			"@okokok/shared/cypress-commands": [
				"libs/shared/cypress-commands/src/index.ts"
			],
			"@okokok/themes/web-dark": ["libs/themes/web-dark/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
