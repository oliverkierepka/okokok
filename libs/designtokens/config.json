{
	"source": ["tokens/**/*.json"],
	"platforms": {
		"scss": {
			"transformGroup": "scss",
			"prefix": "rh",
			"buildPath": "./build/scss/",
			"files": [
				{
					"destination": "_variables.scss",
					"format": "scss/variables",
					"options": {
						"outputReferences": true
					}
				},
				{
					"desitnation": "icons.scss",
					"format": "scss/icons"
				},
				{
					"destination": "fonts.scss",
					"format": "css/fonts.css"
				}
			],
			"actions": ["copy_assets"]
		},
		"css": {
			"transformGroup": "custom/css",
			"buildPath": "build/css/",
			"prefix": "rh",
			"files": [
				{
					"destination": "_variables.css",
					"format": "css/variables",
					"filter": "validToken"
				}
			],
			"actions": ["copy_assets"]
		},
		"sketch": {
			"transforms": ["sketch/palette/v2"],
			"files": [
				{
					"format": "sketch/palette/v2",
					"destination": "colors.sketch"
				}
			]
		}
	}
}
